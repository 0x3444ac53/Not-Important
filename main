# functions
atag() { printf '%s' "<a class=\"$1\" href=\"$2\">$3</a>$4"; }
page() { atag pages "$@"; }
list() { printf '%s' "<li>$*</li>"; }
margin() { printf '%s' "margin: $1ch $2ch $3ch $4ch"; }
link() { list "+ <a class=\"$1\" href=\"$2\">$3</a>$4"; }
headerlink() { printf '%s' "<link rel=\"$1\" type=\"$2\" href=\"$3\">"; }
img() { printf '%s' "<img src=\"$1\" alt=\"$2\" width=\"$3\" height=\"$4\">"; }

